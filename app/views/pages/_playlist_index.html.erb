<div class="list-group playlist-box">
	<a href="#" class="list-group-item">
		<h3 class="list-group-item-heading">My Fitbeat Playlists:</h3>
	</a>
	<% if current_user.playlists.empty? %>
		<h5><a href="#" class="list-group-item">No playlists yet. Create one above!</a></h5>
	<% else %>
		<% current_user.playlists.each do |playlist| %>
	
			<%= link_to playlist.name[0..-11], playlist_path(playlist), class: "list-group-item font-up list-group-item" %>
			
		<% end %>
	
	<% end %>
</div>